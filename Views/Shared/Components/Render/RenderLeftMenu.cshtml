@model IEnumerable<MenuItem>
<!-- Begin Left menu -->
<style>
    .sb-sidenav-footer {
        position: absolute;
        bottom: 0;
        width: 100%;
    }
</style>

<div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">
                @foreach (var i in Model)
                {
                    <a class="nav-link" href="~/@i.Link" style="font-size: 20px;">
                        <div class="sb-nav-link-icon">
                            <i class="@i.Icon"></i> <!-- Hiển thị icon -->
                        </div>
                        @i.Name
                    </a>
                }
            </div>
        </div>
        <div class="sb-sidenav-footer">
            <div class="small">Logged in as: MyAccount</div>
        </div>
    </nav>
</div>
<!-- End Left menu -->
