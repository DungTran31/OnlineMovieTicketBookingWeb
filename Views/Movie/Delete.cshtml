@model OnlineMovieTicketBookingWeb.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
    Layout = "_MyLayout";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
    <div class="mt-4">
        <div class="text-light">
            <h4>Movie Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Duration)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Duration)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AgeRestriction)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AgeRestriction)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ReleaseDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MovieGenre)
                </dt>
                <dd class="col-sm-9">
                    @if (Model.MovieGenre != null)
                    {
                        @Html.DisplayFor(model => model.MovieGenre.Name)
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Language)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Language)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Actors)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Actors)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Country)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Producer)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Producer)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Summary)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Summary)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IsDeleted)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 mb-4 text-center">
        <form asp-controller="Movie" asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-controller="Movie" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
