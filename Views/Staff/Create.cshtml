@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@model OnlineMovieTicketBookingWeb.Models.Staff
<div class="ms-2 mx-2">
    <h1>Create</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Contact" asp-action="Create" method="post" class="mt-3">
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" class="form-control" placeholder="Id">
            </div>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FullName" class="form-control" placeholder="Full name">
            </div>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="IdentityNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="IdentityNumber" class="form-control" placeholder="CCCD/CMND">
            </div>
            <span asp-validation-for="IdentityNumber" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="HireDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="HireDate" class="form-control">
            </div>
            <span asp-validation-for="HireDate" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Gender" class="form-control" placeholder="Gender">
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="checkbox" class="custom-control-input" asp-for="IsActive">
            </div>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Role" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Role" class="form-control" placeholder="Role">
            </div>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary ms-2 mx-2">Create</button>
            </div>
        </div>
    </form>
</div>
