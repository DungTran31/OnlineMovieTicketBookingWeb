@model SetUserPasswordModel
@{
    ViewData["Title"] = "Đặt mật khẩu";
}

<h4 class="ms-2 mx-2">Thiết lập mật khẩu cho thành viên: @ViewBag.user.UserName</h4>
<partial name="_StatusMessage" />


<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ms-2 mx-2">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group ms-2 mx-2">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary ms-2 mx-2">Đặt mật khẩu</button>
            <a class="btn btn-primary" asp-action="Index">Danh sách thành viên</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
